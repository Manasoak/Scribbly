{
    "manifest_version": 3,
    "name": "Scribbly:Sticky Notes",
    "version": "1.0",
    "description": "A extension for sticky notes that allows users to create, edit, and manage notes.",
    "icons": {
        "128": "icon.png"
    },
    
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "host_permissions": [
        "<all_urls>"
    ]
}